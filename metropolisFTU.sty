% Based on BrownU Theme for Metropolis
% https://github.com/vskbellala/metropolis-brown

\RequirePackage{caption}
\RequirePackage{beamerfontthememetropolis}

% Constants
\definecolor{green}{RGB}{149, 193, 31}
\definecolor{darkgreen}{RGB}{0, 102, 51}
\definecolor{gold}{RGB}{255, 199, 44}
\definecolor{darkgold}{RGB}{224, 165, 0}
\definecolor{grayFTU}{RGB}{227, 227, 227}
\newcommand{\progressbar}{2pt}

% Captions
\captionsetup[figure]{labelfont={bf,color=darkgreen}}
\captionsetup[table]{labelfont={bf,color=darkgreen}}

% Progress Bar
\makeatletter
\setlength{\metropolis@titleseparator@linewidth}{\progressbar}
\setlength{\metropolis@progressonsectionpage@linewidth}{\progressbar}
\setlength{\metropolis@progressinheadfoot@linewidth}{\progressbar}
\makeatother

% Slide colors
\setbeamercolor{alerted text}{fg=green}
\setbeamercolor{example text}{fg=darkgold}
\setbeamercolor{palette primary}{bg=darkgreen}
\setbeamercolor{bibliography entry location}{fg=darkgreen}

